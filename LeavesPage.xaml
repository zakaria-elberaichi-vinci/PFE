<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFE.LeavesPage"
             Title="Mes congés">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Mes congés"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Indicateur de chargement -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           IsVisible="False"
                           IsRunning="False" />

        <!-- Liste des congés -->
        <CollectionView x:Name="LeavesCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5"
                   Padding="10"
                   HasShadow="True"
                   CornerRadius="10">
                        <VerticalStackLayout>
                            <!-- Titre du congé -->
                            <Label Text="{Binding Name}"
                           FontAttributes="Bold" />

                            <!-- Période -->
                            <Label Text="{Binding Period}" />

                            <!-- Statut -->
                            <Label Text="{Binding Status}"
                           TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <!-- Message vide -->
        <Label x:Name="EmptyLabel"
               Text="Aucun congé trouvé."
               IsVisible="False"
               HorizontalOptions="Center"
               TextColor="Gray" />

    </VerticalStackLayout>
</ContentPage>
