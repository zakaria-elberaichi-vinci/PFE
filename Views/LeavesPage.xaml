<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:PFE.Converters"
             x:Class="PFE.Views.LeavesPage"
             Title="Mes congés">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:StatusColorConverter x:Key="StatusColorConverter" />
            <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20"
                                 Spacing="10">

                <CollectionView ItemsSource="{Binding Leaves}"
                                IsVisible="{Binding IsEmployee}"
                                Margin="0,0,0,30">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,5"
                                   Padding="10"
                                   CornerRadius="8"
                                   HasShadow="True"
                                   BackgroundColor="#33000000">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="{Binding Type}"
                                           FontAttributes="Bold"
                                           FontSize="14" />
                                    <Label Text="Periode"
                                           FontSize="10"
                                           TextColor="#999999" />
                                    <Label Text="{Binding StartDate, StringFormat='Début : {0:dd/MM/yyyy}'}"
                                           FontSize="12"
                                           TextColor="#666666" />
                                    <Label Text="{Binding EndDate, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                           FontSize="12"
                                           TextColor="#666666" />
                                    <Label Text="Statut"
                                           FontSize="10"
                                           TextColor="#999999"
                                           Margin="0,5,0,0" />
                                    <Frame Padding="8,4"
                                           CornerRadius="4"
                                           BorderColor="Transparent"
                                           HasShadow="False"
                                           BackgroundColor="{Binding Status, Converter={StaticResource StatusColorConverter}}">
                                        <Label Text="{Binding Status}"
                                               FontSize="11"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center" />
                                    </Frame>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="{Binding ErrorMessage}"
                       FontSize="16"
                       TextColor="Tomato"
                       HorizontalTextAlignment="Center"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="DodgerBlue" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
