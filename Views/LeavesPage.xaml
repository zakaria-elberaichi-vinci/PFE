<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFE.LeavesPage"
             Title="Mes congés">

    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Mes congés"
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

            <CollectionView x:Name="LeavesCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
                               Padding="10"
                               CornerRadius="8"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Period}"
                                       FontSize="12" />
                                <Label Text="{Binding Status}"
                                       FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
