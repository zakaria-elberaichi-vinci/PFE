<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:PFE.Converters"
             x:Class="PFE.Views.LeavesPage"
             Title="Mes congés"
             ControlTemplate="{StaticResource CommonPageTemplate}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Mes congés"
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />
            
            <Label Text="Veuillez vous connecter pour voir vos congés."
                   TextColor="Tomato"
                   FontAttributes="Italic"
                   IsVisible="{Binding IsAuthenticated, Converter={StaticResource InverseBoolConverter}}" />
            
            <CollectionView ItemsSource="{Binding Leaves}"
                            IsVisible="{Binding IsAuthenticated}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
                               Padding="10"
                               CornerRadius="8"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Period}"
                                       FontSize="12" />
                                <Label Text="{Binding Status}"
                                       FontSize="12" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Tomato"
                   FontAttributes="Italic"
                   Margin="0,10,0,0" />
            
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="DodgerBlue" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>