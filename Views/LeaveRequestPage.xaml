<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             xmlns:conv="clr-namespace:PFE.Converters"
             x:Class="PFE.Views.LeaveRequestPage"
             BackgroundColor="#0F172A"
             Title="Demande de congÃ©">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:IntToBoolConverter x:Key="IntToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">

            <ContentView IsVisible="{Binding IsEmployee}">
                <VerticalStackLayout Spacing="15">

                    <!-- Indicateur hors-ligne -->
                    <Frame IsVisible="{Binding IsOffline}"
                           Padding="12"
                           BackgroundColor="#DC2626"
                           CornerRadius="8"
                           HasShadow="False"
                           Margin="0,0,0,5">
                        <HorizontalStackLayout Spacing="10"
                                               HorizontalOptions="Center">
                            <Label Text="ðŸ“´"
                                   FontSize="16"
                                   VerticalOptions="Center" />
                            <Label Text="Mode hors-ligne - DonnÃ©es en cache"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Message de synchronisation en cours -->
                    <Frame IsVisible="{Binding IsSyncing}"
                           Padding="12"
                           BackgroundColor="#FFA500"
                           CornerRadius="8"
                           HasShadow="False"
                           Margin="0,0,0,5">
                        <HorizontalStackLayout Spacing="10">
                            <ActivityIndicator IsRunning="True"
                                               Color="White"
                                               WidthRequest="20"
                                               HeightRequest="20" />
                            <Label Text="{Binding SyncMessage}"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Message de statut de synchronisation -->
                    <Frame IsVisible="{Binding ShowSyncStatus}"
                           Padding="12"
                           BackgroundColor="#2E7D32"
                           CornerRadius="8"
                           HasShadow="False"
                           Margin="0,0,0,5">
                        <Label Text="{Binding SyncMessage}"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                    <Label Text="Formulaire pour demander un congÃ©"
                           FontSize="16" />

                    <VerticalStackLayout Spacing="10">
                        <Label>
                            <Label.Text>
                                <MultiBinding StringFormat="PÃ©riode: {0:dd/MM/yyyy} â†’ {1:dd/MM/yyyy}">
                                    <Binding Path="SelectedRange.StartDate" />
                                    <Binding Path="SelectedRange.EndDate" />
                                </MultiBinding>
                            </Label.Text>
                        </Label>
                        <sf:SfCalendar SelectionMode="Range"
                                       ShowTrailingAndLeadingDates="False"
                                       HeightRequest="240"
                                       WidthRequest="360"
                                       HorizontalOptions="Start"
                                       BackgroundColor="#33000000"
                                       EnablePastDates="False"
                                       View="Month"
                                       SelectedDateRange="{Binding SelectedRange, Mode=TwoWay}"
                                       SelectableDayPredicate="{Binding SelectableDayPredicate}"
                                       SelectionChanged="SfCalendar_SelectionChanged">

                            <sf:SfCalendar.HeaderView>
                                <sf:CalendarHeaderView>
                                    <sf:CalendarHeaderView.TextStyle>
                                        <sf:CalendarTextStyle TextColor="White" />
                                    </sf:CalendarHeaderView.TextStyle>
                                </sf:CalendarHeaderView>
                            </sf:SfCalendar.HeaderView>

                            <sf:SfCalendar.MonthView>
                                <sf:CalendarMonthView>
                                    <sf:CalendarMonthView.TextStyle>
                                        <sf:CalendarTextStyle TextColor="White" />
                                    </sf:CalendarMonthView.TextStyle>
                                    <sf:CalendarMonthView.DisabledDatesTextStyle>
                                        <sf:CalendarTextStyle TextColor="Gray" />
                                    </sf:CalendarMonthView.DisabledDatesTextStyle>
                                </sf:CalendarMonthView>
                            </sf:SfCalendar.MonthView>
                        </sf:SfCalendar>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6"
                                         IsVisible="{Binding LeaveTypes.Count, Converter={StaticResource IntToBoolConverter}}">
                        <Label Text="Type de congÃ©" />
                        <Picker ItemsSource="{Binding LeaveTypes}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding SelectedLeaveType, Mode=TwoWay}"
                                Title="Choisissez un type de congÃ©" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Motif (optionnel)"
                               TextColor="#E5E7EB"
                               FontSize="14" />
                        <Editor Text="{Binding Reason, Mode=TwoWay}"
                                AutoSize="TextChanges"
                                HeightRequest="110"
                                TextColor="White"
                                BackgroundColor="#020617"
                                Placeholder="Ex : Vacances, rendez-vous mÃ©dical..." />
                    </VerticalStackLayout>

                    <ActivityIndicator IsVisible="{Binding IsBusy}"
                                       IsRunning="{Binding IsBusy}" />

                    <Label Text="{Binding ValidationMessage}"
                           TextColor="Tomato"
                           HorizontalTextAlignment="Center"
                           FontSize="14" />

                    <Button Text="Envoyer la demande"
                            BackgroundColor="#0078D7"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"
                            Clicked="SubmitButton_Clicked"
                            IsEnabled="{Binding CanSubmit}" />

                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Tomato"
                           HorizontalTextAlignment="Center"
                           FontSize="14" />
                </VerticalStackLayout>
            </ContentView>

            <ContentView IsVisible="{Binding IsAccessDenied}">
                <VerticalStackLayout>
                    <Label Text="AccÃ¨s refusÃ© : cette page est rÃ©servÃ©e aux employÃ©s connectÃ©s."
                           TextColor="Tomato"
                           HorizontalTextAlignment="Center"
                           FontSize="16" />
                </VerticalStackLayout>
            </ContentView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>