<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             x:Class="PFE.Views.CalendarPage"
             Title="Calendrier">

    <Grid Padding="16"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          BackgroundColor="#121212">
        
        <Frame WidthRequest="320"
               HeightRequest="360"
               CornerRadius="12"
               Padding="12"
               BackgroundColor="#1E1E1E"
               HasShadow="True">

            <calendar:SfCalendar x:Name="Cal"
                                 View="Month"
                                 SelectionMode="Range"
                                 Background="#1E1E1E"
                                 MinimumDate="2024-01-01"
                                 MaximumDate="2026-12-31">

                <calendar:SfCalendar.HeaderView>
                    <calendar:CalendarHeaderView Background="#222831"  >
                        <calendar:CalendarHeaderView.TextStyle>
                            <calendar:CalendarTextStyle TextColor="#E0E0E0"
                                                        FontSize="16"
                                                        FontAttributes="Bold"/>
                        </calendar:CalendarHeaderView.TextStyle>
                        <calendar:CalendarHeaderView.ShowNavigationArrows>True</calendar:CalendarHeaderView.ShowNavigationArrows>
                    </calendar:CalendarHeaderView>
                </calendar:SfCalendar.HeaderView>

                <calendar:SfCalendar.MonthView>
                    <calendar:CalendarMonthView
                        Background="#1E1E1E"
                        NumberOfVisibleWeeks="5"
                        ShowWeekNumber="False"
                        TodayBackground="#3949AB"
                        TrailingLeadingDatesBackground="#181818">

                        <calendar:CalendarMonthView.TextStyle>
                            <calendar:CalendarTextStyle TextColor="#E0E0E0" FontSize="14"/>
                        </calendar:CalendarMonthView.TextStyle>

                        <calendar:CalendarMonthView.TodayTextStyle>
                            <calendar:CalendarTextStyle TextColor="#FFFFFF" FontSize="14" FontAttributes="Bold"/>
                        </calendar:CalendarMonthView.TodayTextStyle>

                        <calendar:CalendarMonthView.WeekendDatesTextStyle>
                            <calendar:CalendarTextStyle TextColor="#90CAF9"/>
                        </calendar:CalendarMonthView.WeekendDatesTextStyle>

                        <calendar:CalendarMonthView.DisabledDatesTextStyle>
                            <calendar:CalendarTextStyle TextColor="#616161"/>
                        </calendar:CalendarMonthView.DisabledDatesTextStyle>

                        <calendar:CalendarMonthView.WeekendDatesBackground>#141414</calendar:CalendarMonthView.WeekendDatesBackground>
                        <calendar:CalendarMonthView.DisabledDatesBackground>#101010</calendar:CalendarMonthView.DisabledDatesBackground>
                        <calendar:CalendarMonthView.SpecialDatesBackground>#263238</calendar:CalendarMonthView.SpecialDatesBackground>
                    </calendar:CalendarMonthView>
                </calendar:SfCalendar.MonthView>

                <calendar:SfCalendar.FooterView>
                    <calendar:CalendarFooterView Height="48"
                                                 Background="#222831"
                                                 DividerColor="#333333"
                                                 ShowActionButtons="True"
                                                 ShowTodayButton="True">
                        <calendar:CalendarFooterView.TextStyle>
                            <calendar:CalendarTextStyle TextColor="#E0E0E0" FontSize="14"/>
                        </calendar:CalendarFooterView.TextStyle>
                    </calendar:CalendarFooterView>
                </calendar:SfCalendar.FooterView>

            </calendar:SfCalendar>
        </Frame>
    </Grid>
</ContentPage>