<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFE.Views.DashboardPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Bienvenue dans l'application PFE"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label Text="Vous êtes maintenant connecté à Odoo !" 
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="Green" />

            <Button Text="Voir mes congés"
                    x:Name="BtnLeaves"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />

            <Button Text="Voir mes informations"
                    x:Name="BtnProfile"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />

            <Button
                    x:Name="BtnManageLeaves"
                    Text="Gérer les demandes de congés"
                    BackgroundColor="YellowGreen"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    IsVisible="False" />

            <Button Text="Voir le calendrier"
                    x:Name="BtnCalendar"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
