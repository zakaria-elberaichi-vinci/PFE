<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFE.Views.UserProfilePage"
             xmlns:conv="clr-namespace:PFE.Converters"
             Title="Mes Informations"
             BackgroundColor="#0F172A">

    <Application.Resources>
        <ResourceDictionary>
            <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <conv:NullOrEmptyToDefaultConverter x:Key="NullOrEmptyConverter" />
        </ResourceDictionary>
    </Application.Resources>

    <ScrollView>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

     
            <VerticalStackLayout Grid.Row="0"
                                 Spacing="6"
                                 Margin="0,20,0,20">
                <Label Text="Mon profil"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label Text="Informations synchronisÃ©es depuis Odoo"
                       FontSize="14"
                       TextColor="#9CA3AF" />
            </VerticalStackLayout>
            
        <VerticalStackLayout Grid.Row="1"
                                 Spacing="16">
           <Label Text="{Binding ErrorMessage}"
                       TextColor="#F97373"
                       HorizontalTextAlignment="Center"
                       FontSize="14"
                       LineBreakMode="WordWrap"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Message de succÃ¨s -->
                <Frame IsVisible="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyConverter}}"
                   Padding="12"
                   BackgroundColor="#22C55E"
                   CornerRadius="8"
                   HasShadow="False"
                   Margin="0,0,0,5">
                <Label Text="{Binding SuccessMessage}"
                       TextColor="White"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
            </Frame>

                <ContentView IsVisible="{Binding IsAuthenticated}">
                    <Frame CornerRadius="18"
                           HasShadow="True"
                           Padding="18"
                           BackgroundColor="#111827"
                           BorderColor="#1F2937">
                        <ScrollView>
                            <VerticalStackLayout Spacing="16">


                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="12">
                                    <Label Grid.Column="0"
                                           Text="Nom"
                                           FontAttributes="Bold"
                                           TextColor="#D1D5DB"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Name, Converter={StaticResource NullOrEmptyConverter}}"
                                           TextColor="#E5E7EB"
                                           VerticalOptions="Center" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="12">
                                    <Label Grid.Column="0"
                                           Text="Email"
                                           FontAttributes="Bold"
                                           TextColor="#D1D5DB"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding WorkEmail, Converter={StaticResource NullOrEmptyConverter}}"
                                           TextColor="#E5E7EB"
                                           VerticalOptions="Center" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="12">
                                    <Label Grid.Column="0"
                                           Text="Poste"
                                           FontAttributes="Bold"
                                           TextColor="#D1D5DB"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding JobTitle, Converter={StaticResource NullOrEmptyConverter}}"
                                           TextColor="#E5E7EB"
                                           VerticalOptions="Center" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="12">
                                    <Label Grid.Column="0"
                                           Text="DÃ©partement"
                                           FontAttributes="Bold"
                                           TextColor="#D1D5DB"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding DepartmentName, Converter={StaticResource NullOrEmptyConverter}}"
                                           TextColor="#E5E7EB"
                                           VerticalOptions="Center" />
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*"
                                      ColumnSpacing="12">
                                    <Label Grid.Column="0"
                                           Text="Manager"
                                           FontAttributes="Bold"
                                           TextColor="#D1D5DB"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding ManagerName, Converter={StaticResource NullOrEmptyConverter}}"
                                           TextColor="#E5E7EB"
                                           VerticalOptions="Center" />
                                </Grid>

                                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                                   IsVisible="{Binding IsBusy}"
                                                   Color="#60A5FA"
                                                   HorizontalOptions="Center" />

                            </VerticalStackLayout>
                        </ScrollView>
                    </Frame>
                </ContentView>

                <!-- Section ParamÃ¨tres -->
                <Frame CornerRadius="18"
                       HasShadow="True"
                       Padding="18"
                       BackgroundColor="#111827"
                       BorderColor="#1F2937"
                       Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ParamÃ¨tres"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#E5E7EB" />
                        
                        <Label Text="GÃ©rez les donnÃ©es locales de l'application"
                               FontSize="12"
                               TextColor="#9CA3AF" />

                        <Button Text="ðŸ—‘ï¸ Vider le cache local"
                                Command="{Binding ClearCacheCommand}"
                                BackgroundColor="#6B7280"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="44"
                                FontSize="14" />
                        
                        <Label Text="Supprime les donnÃ©es en cache et les dÃ©cisions en attente de synchronisation."
                               FontSize="11"
                               TextColor="#6B7280"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
