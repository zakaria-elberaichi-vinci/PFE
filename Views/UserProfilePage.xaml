<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:PFE.Converters"
             x:Class="PFE.Views.UserProfilePage"
             Title="Mes Informations"
             ControlTemplate="{StaticResource CommonPageTemplate}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Mes informations"
                   FontSize="26"
                   HorizontalOptions="Center" />
            
            <Label Text="Nom :" FontAttributes="Bold" />
            <Label Text="{Binding Name}" />
            
            <Label Text="Email :" FontAttributes="Bold" />
            <Label Text="{Binding WorkEmail}" />
            
            <Label Text="Poste :" FontAttributes="Bold" />
            <Label Text="{Binding JobTitle}" />
            
            <Label Text="DÃ©partement :" FontAttributes="Bold" />
            <Label Text="{Binding DepartmentName}" />
            
            <Label Text="Manager :" FontAttributes="Bold" />
            <Label Text="{Binding ManagerName}" />
            
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Tomato"
                   FontAttributes="Italic"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
            
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="DodgerBlue" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
