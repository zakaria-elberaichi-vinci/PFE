<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:PFE.Converters"
             x:Class="PFE.Views.ManageLeavesPage"
             x:Name="RootPage"
             BackgroundColor="#0F172A"
             Title="Demandes Ã  traiter">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <conv:StateIsSecondApprovalConverter x:Key="SecondApprovalConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20"
                                 Spacing="10">

                <VerticalStackLayout Spacing="4"
                                     Margin="0,0,0,8">
                    <Label Text="Demandes Ã  traiter"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Validez ou refusez les demandes de congÃ©s en attente"
                           FontSize="14"
                           TextColor="#9CA3AF" />
                </VerticalStackLayout>

                <!-- Indicateur hors-ligne -->
                <Frame IsVisible="{Binding IsOfflineMode}"
                       Padding="12"
                       BackgroundColor="#DC2626"
                       CornerRadius="8"
                       HasShadow="False"
                       Margin="0,0,0,5">
                    <HorizontalStackLayout Spacing="10"
                                           HorizontalOptions="Center">
                        <Label Text="ðŸ“´"
                               FontSize="16"
                               VerticalOptions="Center" />
                        <Label Text="Mode hors-ligne - DonnÃ©es en cache"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Frame>

                <!-- Indicateur de dÃ©cisions en attente de synchronisation -->
                <Frame IsVisible="{Binding HasPendingDecisions}"
                       Padding="12"
                       BackgroundColor="#FFA500"
                       CornerRadius="8"
                       HasShadow="False"
                       Margin="0,0,0,5">
                    <HorizontalStackLayout Spacing="10"
                                           HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="True"
                                           Color="White"
                                           WidthRequest="20"
                                           HeightRequest="20" />
                        <Label TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"
                               VerticalOptions="Center">
                            <Label.Text>
                                <Binding Path="PendingDecisionsCount" 
                                         StringFormat="â³ {0} dÃ©cision(s) en attente de synchronisation" />
                            </Label.Text>
                        </Label>
                    </HorizontalStackLayout>
                </Frame>

                <!-- Message d'information (session restaurÃ©e, etc.) -->
                <Frame IsVisible="{Binding InfoMessage, Converter={StaticResource StringNotEmptyConverter}}"
                       Padding="12"
                       BackgroundColor="#3B82F6"
                       CornerRadius="8"
                       HasShadow="False"
                       Margin="0,0,0,5">
                    <Label Text="{Binding InfoMessage}"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                </Frame>

                <!-- Message de succÃ¨s -->
                <Frame IsVisible="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyConverter}}"
                       Padding="12"
                       BackgroundColor="#22C55E"
                       CornerRadius="8"
                       HasShadow="False"
                       Margin="0,0,0,5">
                    <Label Text="{Binding SuccessMessage}"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                </Frame>

                <!-- Message d'erreur -->
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#F97373"
                       HorizontalTextAlignment="Center"
                       FontSize="14"
                       LineBreakMode="WordWrap"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
                
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="#60A5FA"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                
                <!-- Bouton Actualiser -->
                <Button Text="Actualiser"
                        Command="{Binding RefreshOdooCommand}"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="40"
                        HorizontalOptions="End"
                        Margin="0,0,0,10" />

                <CollectionView ItemsSource="{Binding Leaves}"
                                IsVisible="{Binding IsManager}"
                                Margin="0,10,0,30">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"
                                           ItemSpacing="10" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,4"
                                   Padding="14"
                                   CornerRadius="18"
                                   HasShadow="True"
                                   BackgroundColor="#111827"
                                   BorderColor="#1F2937">

                                <Grid ColumnDefinitions="*,Auto"
                                      ColumnSpacing="12">

                                    <VerticalStackLayout Grid.Column="0"
                                                         Spacing="6"
                                                         VerticalOptions="Center">
                                        
                                        <Label Text="DeuxiÃ¨me Validation"
                                               FontAttributes="Italic"
                                               TextColor="#F59E0B"
                                               FontSize="14"
                                               IsVisible="{Binding Status, Converter={StaticResource SecondApprovalConverter}}" />

                                        <Label Text="{Binding EmployeeName}"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="#E5E7EB" />

                                        <Label Text="{Binding Type, StringFormat='Type de congÃ© : {0}'}"
                                               TextColor="#9CA3AF"
                                               FontSize="13" />

                                        <Label Text="{Binding StartDate, StringFormat='DÃ©but : {0:dd/MM/yyyy}'}"
                                               TextColor="#D1D5DB"
                                               FontSize="13" />
                                        <Label Text="{Binding EndDate, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                               TextColor="#D1D5DB"
                                               FontSize="13" />

                                        <Label Text="{Binding Days, StringFormat='DurÃ©e : {0} jours'}"
                                               TextColor="#9CA3AF"
                                               FontSize="13" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1"
                                                         Spacing="8"
                                                         HorizontalOptions="End"
                                                         VerticalOptions="Center">

                                        <Button Text="Valider"
                                                Command="{Binding BindingContext.ApproveCommand, Source={x:Reference RootPage}}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#22C55E"
                                                TextColor="White"
                                                CornerRadius="999"
                                                HeightRequest="34"
                                                FontSize="13"
                                                Padding="16,0" />

                                        <Button Text="Refuser"
                                                Command="{Binding BindingContext.RefuseCommand, Source={x:Reference RootPage}}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#EF4444"
                                                TextColor="White"
                                                CornerRadius="999"
                                                HeightRequest="34"
                                                FontSize="13"
                                                Padding="16,0" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
