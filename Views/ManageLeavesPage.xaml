<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PFE.Views.ManageLeavesPage"
             xmlns:controls="clr-namespace:PFE.Controls"
             xmlns:conv="clr-namespace:PFE.Converters"
             x:Name="RootPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20"
                                 Spacing="15"
                                 HorizontalOptions="Center"
                                 WidthRequest="400">

                <Label Text="Demandes à traiter"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="{Binding ErrorMessage}"
                       TextColor="Tomato"
                       HorizontalTextAlignment="Center"
                       FontSize="16"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />

                <CollectionView x:Name="LeavesList"
                                ItemsSource="{Binding Leaves}"
                                IsVisible="{Binding IsManager}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10"
                                   Margin="5"
                                   BorderColor="#cccccc"
                                   CornerRadius="10"
                                   HorizontalOptions="FillAndExpand">
                                <VerticalStackLayout Spacing="4"
                                                     HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding EmployeeName}"
                                           FontAttributes="Bold"
                                           FontSize="16" />
                                    <Label Text="{Binding Type, StringFormat='Type de congé : {0}'}"
                                           FontAttributes="Italic"
                                           TextColor="#555"
                                           FontSize="14" />
                                    <Label Text="{Binding StartDate, StringFormat='Début : {0:dd/MM/yyyy}'}"
                                           TextColor="#333"
                                           FontSize="14" />
                                    <Label Text="{Binding EndDate, StringFormat='Fin : {0:dd/MM/yyyy}'}"
                                           TextColor="#333"
                                           FontSize="14" />
                                    <Label Text="{Binding Days, StringFormat='Durée : {0} jours'}"
                                           TextColor="#333"
                                           FontSize="14" />

                                    <HorizontalStackLayout Spacing="8"
                                                           Margin="0,8,0,0"
                                                           HorizontalOptions="End">
                                        <Button Text="Valider"
                                                Command="{Binding BindingContext.ApproveCommand, Source={x:Reference RootPage}}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#4CAF50"
                                                TextColor="White"
                                                CornerRadius="8"
                                                HeightRequest="32"
                                                WidthRequest="80"
                                                FontSize="12" />
                                        <Button Text="Refuser"
                                                Command="{Binding BindingContext.RefuseCommand, Source={x:Reference RootPage}}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#F44336"
                                                TextColor="White"
                                                CornerRadius="8"
                                                HeightRequest="32"
                                                WidthRequest="80"
                                                FontSize="12" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <controls:ConfirmationPopup x:Name="LeaveConfirmationPopup"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand" />
    </Grid>

</ContentPage>